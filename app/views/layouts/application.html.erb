<!DOCTYPE html>
<html>
  <head>
    <title>RailsGamesMaster</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>

    <div class="navbar bg-white d-flex justify-content-between sticky-top">
      <div class="container">
        <h3 class="mb-0"> <%= link_to "G|M", root_path %></h3>

        <div class="search-form">
          <%= form_tag games_path, method: :get, class:'d-flex justify-content-center align-items-center' do %>
              <%= text_field_tag :query, params[:query], class: "form-input", placeholder: "Search a game" %>
              <button type="submit" class="btn-form">
                <i class="fas fa-search"></i>
              </button>
              <%#= submit_tag '.html_safe, class: "btn-form" %>
          <% end %>
        </div>

        <div class="avatar">
          <div class="dropdown">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/cveneziani", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false, alt: "avatar" %>
            <div class="dropdown-menu dropdown-menu-right text-center navbar-dropdown" aria-labelledby="navbarDropdown">
              <% if user_signed_in? %>
                <%= link_to "Dashboard", dashboard_path, class: "btn logout" %>
                <%= link_to "Logout", destroy_user_session_path, class: "btn logout", method: :delete %>
              <% else %>
                <%= link_to "Login", new_user_session_path, class: "btn login" %>
                <%= link_to "Sign up", new_user_registration_path, class: "btn sign-up" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%= yield %>

    <div class="footer">
      <a href="https://github.com/mauriarmora/rails-games-master"><i class="fab fa-github"></i></a>
      <a href="https://www.facebook.com/lewagonspain/?brand_redir=116941945171079"><i class="fab fa-facebook"></i></a>
      <a href="https://www.instagram.com/lewagonspain/"><i class="fab fa-instagram"></i></a>
      <%= image_tag ('lewagon-logo-black.png') %>
    </div>

  </body>
</html>
