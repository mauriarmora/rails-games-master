<div class="container">
  <div class="wrapper mt-4">
    <h1><%= @game.name %></h1>
    <h4><i class="fas fa-map-marker-alt"> </i> <%= @game.location %></h4>
  </div>


 <%= cl_image_tag @game.photo.key, height: 300, width: 400, crop: :scale  %>


  <div class="wrapper d-flex">

    <div class="wrapper w-50">
      <div class="wrapper d-flex">

        <div class="game-details">
          <h5><%= @game.name %></h5>
          <br />
          <p><strong>Category:</strong> <%= @game.category %></p>
          <p><strong>Age:</strong>  from <%= @game.age %> years-old.</p>
          <p><strong>Players:</strong>  <%= @game.number_of_players %></p>
          <p><strong>Duration:</strong>  <%= @game.game_time %></p>
          <p><strong>Condition:</strong>  <%= @game.condition %></p>
          <br />
          <p><strong>Description:</strong>  <%= @game.description %></p>

        </div>

        <div class="avatar">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/cveneziani", class: "avatar", alt: "avatar" %>
        </div>

      </div>
      <h5 class="mt-4"><strong>Select your dates</strong></h5>
      <img class="w-100" src="https://i.ibb.co/w0qQRwx/Captura-de-pantalla-2020-09-15-a-las-17-51-35.png" alt="">

    </div>

    <div class="booking-details ml-4 w-50">
      <h4><strong><%= @game.price %>â‚¬</strong>/night </h4>

      <%= simple_form_for([@game, @booking]) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <div class="form-inputs">
          <%= f.input :start_date %>
          <%= f.input :end_date %>
        </div>

        <div class="form-actions">
          <%= f.button :submit %>
        </div>
      <% end %>

    </div>

  </div>

</div>

