<div class="container">
  <div class="form shadow">
    <h2>Add a new game</h2>
    <%= simple_form_for(@new_game) do |f| %>
      <div class="row">
        <div class="col-8">
          <%= f.input :name, input_html: { class: 'special' }, label_html: { class: 'not-special'} %>
        </div>
        <div class="col-4">
          <%= f.input :price, input_html: { class: 'special' }, label_html: { class: 'not-special'} %>
        </div>
      </div>
      <div class="row">
        <div class="col-6">
          <%= f.input :category, collection: Game::CATEGORIES, input_html: { class: 'special' }, label_html: { class: 'not-special'} %>
        </div>
        <div class="col-6">
          <%= f.input :condition, input_html: { class: 'special' }, label_html: { class: 'not-special'} %>
        </div>
      </div>
      <div class="row">
        <div class="col-6">
          <%= f.input :age, input_html: { class: 'special' }, label_html: { class: 'not-special'} %>
        </div>
        <div class="col-6">
          <%= f.input :number_of_players, input_html: { class: 'special' }, label_html: { class: 'not-special'} %>
        </div>
      </div>
      <div class="row">
        <div class="col-6">
          <%= f.input :game_time, input_html: { class: 'special' }, label_html: { class: 'not-special'} %>
        </div>
        <div class="col-6">
          <p>Add image</p>
        </div>
      </div>
      <%= f.input :description, input_html: { class: 'special' }, label_html: { class: 'not-special'} %>
      <%= f.submit class: 'submit-btn btn btn-primary' %>
    <% end %>
  </div>
</div>
