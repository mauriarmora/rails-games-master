<div class="form-container">
  <div class="form shadow">
    <h2>Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: 'special' }, label_html: { class: 'not-special', placeholder: 'example@example.com'} %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: 'special' }, label_html: { class: 'not-special', placeholder: 'example@example.com'} %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: 'submit-btn btn btn-primary w-100'%>
      </div>
    <% end %>

    <div class="btn-2-container">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
